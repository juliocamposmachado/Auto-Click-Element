{
    "manifest_version": 3,
    "name": "Auto Clicker Facebook Group Invites",
    "version": "1.0",
    "description": "Automatically clicks checkboxes and the 'Enviar convites' button on Facebook group invite pages.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://www.facebook.com/*"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://www.facebook.com/groups/*"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["icons/*"],
            "matches": ["https://www.facebook.com/*"]
        }
    ]
}